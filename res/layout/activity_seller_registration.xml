<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_image"
    tools:context=".Sellers.SellerRegistrationActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/border1">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="20dp">

                <TextView
                    android:id="@+id/seller_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seller Sign Up"
                    android:textColor="@color/Black"
                    android:layout_gravity="center"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/seller_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:text="Join our community of bakers, register now to start selling your cakes!"
                    android:textSize="15sp"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/tell_profile_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:text="Upload profile picture"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="left"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:id="@+id/seller_rg_profilePic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/profile_icon"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"/>

                <EditText
                    android:id="@+id/seller_rg_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:textSize="15sp"
                    android:background="@drawable/border1"
                    android:drawableLeft="@drawable/baseline_account_circle_24"
                    android:drawableTint="@color/Green"/>

                <EditText
                    android:id="@+id/seller_rg_phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:hint="Phone number"
                    android:inputType="number"
                    android:textSize="15sp"
                    android:background="@drawable/border1"
                    android:drawableLeft="@drawable/baseline_local_phone_24"
                    android:drawableTint="@color/Green"/>

                <EditText
                    android:id="@+id/seller_rg_email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:hint="Email"
                    android:layout_marginTop="15dp"
                    android:inputType="textEmailAddress"
                    android:textSize="15sp"
                    android:background="@drawable/border1"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:drawableTint="@color/Green"/>

                <EditText
                    android:id="@+id/seller_rg_business_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:hint="Business name"
                    android:layout_marginTop="15dp"
                    android:inputType="textPersonName"
                    android:textSize="15sp"
                    android:background="@drawable/border1"
                    android:drawableLeft="@drawable/baseline_business_24"
                    android:drawableTint="@color/Green"/>

                <EditText
                    android:id="@+id/seller_rg_business_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:hint="Address"
                    android:layout_marginTop="15dp"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:background="@drawable/border1"
                    android:drawableLeft="@drawable/baseline_location_on_24"
                    android:drawableTint="@color/Green"/>

                <EditText
                    android:id="@+id/seller_rg_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:hint="Password"
                    android:layout_marginTop="15dp"
                    android:inputType="textPassword"
                    android:textSize="15sp"
                    android:background="@drawable/border1"
                    android:drawableLeft="@drawable/baseline_key_24"
                    android:drawableTint="@color/Green"/>

                <EditText
                    android:id="@+id/seller_rg_repassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:padding="10dp"
                    android:hint="Confirm password"
                    android:layout_marginTop="15dp"
                    android:inputType="textPassword"
                    android:background="@drawable/border1"
                    android:textSize="15sp"
                    android:drawableLeft="@drawable/baseline_key_24"
                    android:drawableTint="@color/Green"/>

                <Button
                    android:id="@+id/seller_btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:text="Register now"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/progressbar"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/belowtext1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:text="Already have an account?"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/seller_login_ask"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to login"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/Green"/>
    </LinearLayout>
</LinearLayout>