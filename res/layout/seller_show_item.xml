<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:id="@+id/CakeCard"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/CakeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/CakeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/CakeName"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/CakePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cake Price"
            android:layout_below="@id/CakeImage"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/CakeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/CakePrice"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/red"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>